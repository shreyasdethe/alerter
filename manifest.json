{
    "name": "Alerter",
    "description": "Get timely alerts on things you want!",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "scripting",
        "notifications",
        "alarms"
    ],
    "action": {
        "default_popup": "assets/popup.html",
        "default_icon": "assets/icons/bell.png"
    },
    "icons": {
        "16": "assets/icons/bell16.png",
        "32": "assets/icons/bell32.png",
        "48": "assets/icons/bell48.png",
        "64": "assets/icons/bell64.png",
        "128": "assets/icons/bell128.png",
        "512": "assets/icons/bell.png"
    }
}